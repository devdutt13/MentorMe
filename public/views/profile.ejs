<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="../styles/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

</head>

<body class="bg-fuchsia-100 text-black">
  <!-- Navbar -->
  <nav class="bg-fuchsia-900 ">
    <div class="container mx-auto flex justify-between items-center py-2">
        <h1 class="text-2xl font-bold text-white">Your Application</h1>
        <div class="flex space-x-4">
            <a href="#" class="text-white">Login</a>
            <a href="#" class="text-white">Sign Up</a>
        </div>
    </div>
</nav>

<!-- User Profile Tile -->
<div class="container mx-auto mt-8 bg-white rounded-lg overflow-hidden max-w-lg">
    <div class="flex">
      <!-- Left Section (Content) -->
      <div class="w-2/3 p-4">
        <h2 class="text-2xl font-bold mb-4">User Details</h2>
        <p class="mb-2"><strong>Name:</strong> John Doe</p>
        <p class="mb-2"><strong>Email:</strong> john.doe@example.com</p>
        <p class="mb-2"><strong>Location:</strong> City, Country</p>
        <p class="mb-2"><strong>Experience:</strong> 5 years</p>
        <!-- Add more user details as needed -->
      </div>
  
      <!-- Right Section (Profile Picture) -->
      <div class="w-1/3 flex justify-end">
        <img src="../images/profile1.png" alt="Profile Picture" class="w-32 h-32 object-cover rounded-full">
      </div>
    </div>
  </div>
  
  <div class="container mx-auto mt-4 bg-white rounded-lg overflow-hidden max-w-lg">
    <div class="p-4">
      <!-- Date Carousel -->
      <div class="owl-carousel owl-theme text-black font-bold">
        <div class="item text-center">
          <p class="font-bold">Date 1</p>
          <!-- Time Slots for Date 1 -->
          <div class="flex flex-wrap mt-2 justify-center">
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 1</button>
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 2</button>
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 3</button>
            <!-- Add more time slots for Date 1 as needed -->
          </div>
        </div>
  
        <div class="item text-center">
          <p class="font-bold">Date 2</p>
          <!-- Time Slots for Date 2 -->
          <div class="flex flex-wrap mt-2 justify-center">
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 1</button>
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 2</button>
            <button class="w-1/4 p-2 ml-2 bg-gray-200">Time Slot 3</button>
          </div>
        </div>
  
        <!-- Add more date items as needed -->
      </div>
    </div>
  </div>
  <!-- Include Owl Carousel JS from CDN -->
 <!-- Include Owl Carousel JS from CDN -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<!-- Initialize Owl Carousel -->
<script>

  $(document).ready(function () {
    $(".owl-carousel").owlCarousel({
      items: 1, // Adjust the number of items to display based on your design
      loop: true,
      margin: 20,
      nav: true,
      dots: false, // Remove dots
      navText: ['<', '>'],
      responsive: {
        0: {
          items: 1
        },
        600: {
          items: 1
        },
        1000: {
          items: 1
        }
      }
    });
  });
</script>

</body>

</html>
